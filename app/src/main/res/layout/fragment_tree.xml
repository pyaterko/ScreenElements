<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreeFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintDimensionRatio="h,1"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgraund_selected"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Покупка нового телефона"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Что предпринять,предпринять, если телефон, на который распространено действие гарантии, сломался? если телефон, на который распространено действие гарантии, сломался? Куда обратиться в 2022 году и с чем? Все это будет освящено в рамках данного"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintDimensionRatio="h,1"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/barrier1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgraund_selected" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Покупка нового телефона"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Что предпринять,предпринять, если телефон, на который распространено действие гарантии, сломался?если телефон, на который распространено действие гарантии, сломался? Куда обратиться в 2022 году и с чем? "
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintDimensionRatio="h,1"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/barrier2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgraund_selected" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Покупка нового телефона"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Что предпринять, если телефон, на который распространено действие гарантии, сломался?предпринять, если телефон, на который распространено действие гарантии, сломался? Куда обратиться в 2022 году и с чем? "
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textView13,imageView2" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textView15,imageView3" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editNumberPhone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraund_selected"
        android:gravity="center"
        android:hint="✶"
        android:textColorHint="@color/pin_normal"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:boxStrokeWidth="0dp"
        app:layout_constraintDimensionRatio="h,1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editNumberPhone1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraund_selected"
        android:gravity="center"
        android:hint="✶"
        android:textColorHint="@color/pin_normal"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="h,1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editNumberPhone2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraund_selected"
        android:gravity="center"
        android:hint="✶"
        android:textColorHint="@color/pin_normal"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:layout_constraintDimensionRatio="h,1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editNumberPhone3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraund_selected"
        android:gravity="center"
        android:hint="✶"
        android:textColorHint="@color/pin_normal"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:boxStrokeWidth="0dp"
        app:layout_constraintDimensionRatio="h,1" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        app:constraint_referenced_ids="editNumberPhone,editNumberPhone1,editNumberPhone2,editNumberPhone3"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="12dp"
        app:flow_horizontalStyle="spread"
        app:flow_verticalGap="12dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

</androidx.constraintlayout.widget.ConstraintLayout>