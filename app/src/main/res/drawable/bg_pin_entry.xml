<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <size android:height="75dp" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/color_selected" />
            <solid android:color="@color/color_selected" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:height="75dp" />
                    <corners android:radius="6dp" />
                    <stroke android:width="1dp" android:color="@color/color_selected" />
                    <solid android:color="@color/color_selected" />
                </shape>
            </item>
            <item android:end="25dp" android:start="25dp">
                <shape android:shape="line">
                    <stroke android:width="4dp" android:color="@color/color_selected" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:height="75dp" />
                    <corners android:radius="6dp" />
                    <stroke android:width="1dp" android:color="@color/color_selected" />
                    <solid android:color="@color/color_selected" />
                </shape>
            </item>
            <item android:end="25dp" android:start="25dp">
                <shape android:shape="line">
                    <stroke android:width="4dp" android:color="@color/color_selected" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:height="75dp" />
                    <corners android:radius="6dp" />
                    <stroke android:width="1dp" android:color="@color/color_selected" />
                    <solid android:color="@color/color_selected" />
                </shape>
            </item>
            <item android:end="25dp" android:start="25dp">
                <shape android:shape="line">
                    <stroke android:width="4dp" android:color="@color/color_selected" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>